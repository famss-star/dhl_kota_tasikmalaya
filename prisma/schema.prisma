model Sppl {
  id                        String   @id @default(cuid())
  nomor_surat              String   @unique
  pemohon                  String
  nama_kegiatan            String
  jenis_usaha              String
  lokasi                   String
  tanggal_pengajuan        DateTime
  tanggal_terbit           DateTime?
  masa_berlaku             DateTime?
  status                   String   @default("pending")
  nilai_investasi          Decimal  @default(0) @db.Decimal(15,2)
  luas_area                Decimal? @db.Decimal(10,2)
  kategori_dampak          String
  upaya_pengelolaan_sppl   String   @db.Text
  persyaratan_terpenuhi    Boolean  @default(false)
  catatan                  String?  @db.Text
  dokumen_pendukung        Json?
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt

  @@map("sppl")
}

model UklUpl {
  id                      String   @id @default(cuid())
  nomor_surat            String   @unique
  pemohon                String
  nama_kegiatan          String
  jenis_usaha            String
  lokasi                 String
  tanggal_pengajuan      DateTime
  tanggal_terbit         DateTime?
  masa_berlaku           DateTime?
  status                 String   @default("pending")
  nilai_investasi        Decimal  @default(0) @db.Decimal(15,2)
  luas_area              Decimal  @default(0) @db.Decimal(10,2)
  skala_usaha            String
  upaya_pengelolaan_ukl  String   @db.Text
  upaya_pemantauan_upl   String   @db.Text
  dokumen_lengkap        Boolean  @default(false)
  catatan                String?  @db.Text
  dokumen_pendukung      Json?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@map("ukl_upl")
}

model PageContent {
  id          String   @id @default(cuid())
  page        String   // 'amdal', 'iplc', 'sppl', 'ukl-upl'
  section     String   // 'about', 'legal_basis', 'procedure', 'cost_time', 'contact'
  title       String
  content     String   @db.Text
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([page, section])
  @@map("page_contents")
}
